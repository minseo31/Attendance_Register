{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // 소스 파일들이 위치한 최상위 디렉토리
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": true // JavaScript 파일을 포함할 수 있도록 설정
  },
  "include": ["controller/**/*"], // 포함할 파일 경로를 controller 폴더 내의 모든 파일로 설정
  "exclude": ["node_modules", "dist"] // 제외할 파일 경로
}
